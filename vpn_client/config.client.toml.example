# MASQUE VPN Client Configuration

# VPN server address (IP:Port)
server_addr = "127.0.0.1:4433"

# Server name (used for certificate verification and URI template)
server_name = "vpn.example.local"

# CA certificate file path (for server certificate verification)
ca_file = "cert/ca.crt"
# Or provide PEM content directly
# ca_pem = "-----BEGIN CERTIFICATE-----\n..."

# Client certificate file path (mTLS)
tls_cert = "cert/client.crt"
# Or provide PEM content directly
# cert_pem = "-----BEGIN CERTIFICATE-----\n..."

# Client private key file path (mTLS)
tls_key = "cert/client.key"
# Or provide PEM content directly
# key_pem = "-----BEGIN PRIVATE KEY-----\n..."

# Skip server certificate verification (not recommended for production)
insecure_skip_verify = false

# Optional: TUN device name
# tun_name = "utun5"

# Optional: TLS key log file (for Wireshark debugging)
# key_log_file = "ssl-key.log"

# Logging configuration
log_level = "info"  # debug, info, warn, error

# Maximum Transmission Unit
mtu = 1413

# Forward Error Correction (FEC) configuration
[fec]
enabled = false
redundancy = 0.1  # 10% redundancy
block_size = 20   # Number of packets per FEC block
